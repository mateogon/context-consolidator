{
  "name": "context-consolidator",
  "displayName": "Context Consolidator",
  "publisher": "Mateogon",
  "description": "Streamline your workflow by consolidating project context for LLM prompts.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mateogon/file-consolidator.git"
  },
  "icon": "icon.png",
  "version": "1.3.0",
  "activationEvents": [
    "onStartupFinished"
  ],
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.manageConsolidationLists",
        "title": "Context Consolidator: Manage Lists"
      },
      {
        "command": "extension.addSnippetToConsolidateList",
        "title": "Add Selection to Consolidate List"
      },
      {
        "command": "extension.addToConsolidateList",
        "title": "Add to Consolidate List"
      },
      {
        "command": "extension.addFolderToConsolidateList",
        "title": "Add Folder to Consolidate List"
      },
      {
        "command": "extension.toggleConsolidateItem",
        "title": "Add/Remove from Consolidation List"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.addSnippetToConsolidateList",
          "group": "navigation",
          "when": "editorTextFocus && !editorReadonly"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.toggleConsolidateItem",
          "group": "navigation",
          "when": "resourceScheme == file && !explorerResourceIsFolder"
        },
        {
          "command": "extension.addFolderToConsolidateList",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "Context Consolidator",
      "properties": {
        "contextConsolidator.enableHistory": {
          "type": "boolean",
          "default": true,
          "description": "Capture each consolidation in History."
        },
        "contextConsolidator.historyLimit": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "Maximum History snapshots to keep."
        },
        "contextConsolidator.enablePresets": {
          "type": "boolean",
          "default": true,
          "description": "Allow saving and loading named Presets."
        }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.36",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "diff-match-patch": "^1.0.5",
    "gpt-tokenizer": "^2.8.1"
  }
}
