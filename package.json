{
  "name": "context-consolidator",
  "displayName": "Context Consolidator",
  "publisher": "Mateogon",
  "description": "Streamline your workflow by consolidating project context for LLM prompts.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mateogon/file-consolidator.git"
  },
  "icon": "icon.png",
  "version": "1.3.0",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:extension.showConsolidateMenu",
    "onCommand:extension.toggleConsolidateItem",
    "onCommand:contextConsolidator.composePromptToClipboard",
    "onCommand:contextConsolidator.editPromptPreset",
    "onCommand:contextConsolidator.savePresetFromActiveEditor",
    "onCommand:extension.addSnippetToConsolidateList",
    "onCommand:extension.addToConsolidateList",
    "onCommand:extension.addFolderToConsolidateList"
  ],
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      { "command": "extension.showConsolidateMenu", "title": "Context Consolidator: Menu" },
      { "command": "extension.addSnippetToConsolidateList", "title": "Context Consolidator: Add Selection to Consolidate List" },
      { "command": "extension.addToConsolidateList", "title": "Context Consolidator: Add File(s) to Consolidate List" },
      { "command": "extension.addFolderToConsolidateList", "title": "Context Consolidator: Add Folder to Consolidate List" },
      { "command": "extension.toggleConsolidateItem", "title": "Context Consolidator: Add/Remove from Consolidation List" },
      { "command": "contextConsolidator.composePromptToClipboard", "title": "Context Consolidator: Consolidate (TaskSpec) â†’ Clipboard" },
      { "command": "contextConsolidator.editPromptPreset", "title": "Context Consolidator: Edit Prompt Preset" },
      { "command": "contextConsolidator.savePresetFromActiveEditor", "title": "Context Consolidator: Save Preset From Active Editor" }
    ],
    "keybindings": [
      { "command": "contextConsolidator.composePromptToClipboard", "key": "ctrl+alt+c", "mac": "cmd+alt+c" }
    ],
    "menus": {
      "editor/context": [
        { "command": "extension.addSnippetToConsolidateList", "group": "navigation", "when": "editorTextFocus && !editorReadonly" }
      ],
      "explorer/context": [
        { "command": "extension.toggleConsolidateItem", "group": "navigation", "when": "resourceScheme == file && !explorerResourceIsFolder" },
        { "command": "extension.addFolderToConsolidateList", "group": "navigation", "when": "explorerResourceIsFolder" }
      ]
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.36",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "diff-match-patch": "^1.0.5",
    "gpt-tokenizer": "^2.8.1"
  }
}
